# Slot-C---FOC
#include<stdio.h>

void main()
{
  int n, numbers, i=0,Sum=0;
  float Average;

  printf("\nPlease Enter How many Number you want?\n");
  scanf("%d",&n);

  printf("\nPlease Enter the elements one by one\n");
  while(i<n)
   {
     scanf("%d",&numbers);
     Sum = Sum +numbers;
     i++;
   }

  Average = Sum/n;

  printf("\nSum of the %d Numbers = %d",n, Sum);
  printf("\nAverage of the %d Numbers = %.2f",n, Average);
}
